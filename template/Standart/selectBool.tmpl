<select name="{$name}">
    {if ! isset($value) || is_null($value)}
    <option value="" selected="1">&nbsp;</option>
    {/if}
    <option value="1" {if isset($value) && $value === '1'} selected="1"{/if}>Да</option>
    <option value="0"{if isset($value) && $value === '0'} selected="1"{/if}>Нет</option>
</select>
